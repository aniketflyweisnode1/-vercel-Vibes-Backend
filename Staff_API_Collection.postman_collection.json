        {
          "name": "Update Staff",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"staff_working_price_id\": 1,\n  \"staff_id\": 123,\n  \"staff_category_id\": 5,\n  \"price\": 200.00,\n  \"review_count\": 5,\n  \"status\": true\n}"
            },
            "url": {
              "raw": "{{vibes}}/api/master/staff/update",
              "host": ["{{vibes}}"],
              "path": ["api", "master", "staff", "update"]
            }
          },
          "response": []
