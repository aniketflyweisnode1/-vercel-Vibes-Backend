{
  "info": {
    "name": "Staff API Collection",
    "description": "Complete Staff API collection with User and StaffWorkingPrice integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "vibes",
      "value": "http://localhost:3009",
      "type": "string"
    },
    {
      "key": "auth",
      "value": "your_bearer_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Staff Management",
      "item": [
        {
          "name": "Create Staff",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"staff_id\": 123,\n  \"staff_category_id\": 5,\n  \"price\": 150.00,\n  \"review_count\": 0,\n  \"status\": true\n}"
            },
            "url": {
              "raw": "{{vibes}}/api/master/staff/create",
              "host": ["{{vibes}}"],
              "path": ["api", "master", "staff", "create"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Staff",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{vibes}}/api/master/staff/getAll?page=1&limit=10&search=&staff_category_id=&min_price=&max_price=&status=&sort_by=created_at&sort_order=desc",
              "host": ["{{vibes}}"],
              "path": ["api", "master", "staff", "getAll"],
              "query": [
                {
                  "key": "page",
                  "value": "1",
                  "description": "Page number"
                },
                {
                  "key": "limit",
                  "value": "10",
                  "description": "Items per page"
                },
                {
                  "key": "search",
                  "value": "",
                  "description": "Search by staff_id"
                },
                {
                  "key": "staff_category_id",
                  "value": "",
                  "description": "Filter by category ID"
                },
                {
                  "key": "min_price",
                  "value": "",
                  "description": "Minimum price filter"
                },
                {
                  "key": "max_price",
                  "value": "",
                  "description": "Maximum price filter"
                },
                {
                  "key": "status",
                  "value": "",
                  "description": "Filter by status (true/false)"
                },
                {
                  "key": "sort_by",
                  "value": "created_at",
                  "description": "Sort field"
                },
                {
                  "key": "sort_order",
                  "value": "desc",
                  "description": "Sort order (asc/desc)"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Staff by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{vibes}}/api/master/staff/getById/1",
              "host": ["{{vibes}}"],
              "path": ["api", "master", "staff", "getById", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Staff by Category ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{vibes}}/api/master/staff/getByCategoryId/5",
              "host": ["{{vibes}}"],
              "path": ["api", "master", "staff", "getByCategoryId", "5"]
            }
          },
          "response": []
        },
        {
          "name": "Get Staff by User ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{vibes}}/api/master/staff/getByUserId/123",
              "host": ["{{vibes}}"],
